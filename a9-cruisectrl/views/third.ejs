<body>
<%- include ('popUp.ejs') %>
<div class="index">
    <%- include ('top.ejs') %>
    <div id="alert-placeholder">
    </div>
    <div class="middle" id="middle">
            <div class="container">
                <div class="home-back" style="font-size:xx-large" onclick="clickHomeBack()">
                    <img src="images/back.png">
                    Back
                </div>
                <div class="intro-third" style="font-size:50px">
                    <img src=<%=img%>>
                    <strong><%=name%></strong>
                    <div class="intro-detail">
                        <%-detail.replace('\n', '<br>')%>
                    </div>
                    <div>
                        <strong style="margin-top: 2vh;">FAQ:</strong>
                    </div>
                    <% for(var i=0; i < faq.length; i++) { %>
                    <div style="margin: 1vh 0;">
                    <div><strong>Q:</strong><%-faq[i].question.replace('\n', '<br>')%></div>
                    <div><strong>A:</strong><%-faq[i].answer.replace('\n', '<br>')%></div>
                    </div>
                    <% } %>
                </div>
            </div>
    </div>
    <%- include ('bottom.ejs') %>
</div>
